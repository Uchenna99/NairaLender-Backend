generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum AccountType {
  Savings
  Current
}

model user {
  id          String        @id @unique @default(cuid())
  firstName   String
  lastName    String
  email       String        @unique
  phone       String
  password    String
  isVerified  Boolean       @default(false)
  role        Role          @default(USER)
  googleId    String?
  otp         String?
  otpExpiry   DateTime?
  paymentCard PaymentCard[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model PaymentCard {
  id          String @id @unique @default(cuid())
  cardName    String
  cardNumber  String @unique
  issuingBank String
  expiry      String
  user        user   @relation(fields: [userId], references: [id])
  userId      String
}

model BankAccount {
  id            String      @id @unique @default(cuid())
  bankName      String
  accountNumber String      @unique
  accountType   AccountType
}

model Loan {
  id        String   @id @unique @default(cuid())
  amount    Int
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
